{
	auto_https off
}

:8080 {
	encode zstd gzip

	# Strip the /rpc prefix before proxying to geth
	handle_path /rpc* {
		reverse_proxy http://geth:8545
	}

# Expose deployment JSON via main Caddy on :8080 (no .json in path)
	handle /deployment {
		reverse_proxy http://sc-deployment-server:8081
	}

	# Health endpoint
	respond /health 200
}

